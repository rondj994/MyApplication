<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/icona"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@mipmap/ic_launcher"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:backgroundTint="@android:color/darker_gray"
            android:orientation="vertical"
            android:weightSum="1">

            <!--spazio per il titolo del libro -->
            <TextView
                android:id="@+id/titolo_libro"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:textSize="20sp" />

            <!--spazio per l'autore -->
            <TextView
                android:id="@+id/autore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.18"
                android:textSize="20sp" />

            <!--spazio per l'editore -->
            <TextView
                android:id="@+id/editore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.14"
                android:textSize="20sp" />

            <!--spazio per il npezzi -->
            <TextView
                android:id="@+id/npezzi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:textSize="20sp" />

            <!--tasto prenota nel catalogo-->
            <Button
                android:id="@+id/prenota_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:alpha="0.2"
                android:clickable="false"
                android:gravity="center"
                android:text="PRENOTA"
                android:textAlignment="center"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>